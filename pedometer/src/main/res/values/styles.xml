<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PMBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#5698da</item>
        <item name="colorPrimary">#4f92d4</item>
        <item name="colorPrimaryDark">#32618f</item>
    </style>

    <style name="PMAppTheme.NoActionBar" parent="PMBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/pmTopBarTitleColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
</resources>