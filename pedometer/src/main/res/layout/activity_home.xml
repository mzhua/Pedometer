<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:context="com.wonders.xlab.pedometer.ui.HomeActivity">

    <com.wonders.xlab.pedometer.widget.XToolBarLayout
        android:id="@+id/xtbl"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:xtblTitleGravity="left"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xtbl"/>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:mcv_selectionColor="@color/pmAppBlue"
        app:mcv_firstDayOfWeek="sunday"
        app:mcv_weekDayLabels="@array/pm_week"
        app:mcv_calendarMode="week"
        app:mcv_showOtherDates="none"
        />
</RelativeLayout>
